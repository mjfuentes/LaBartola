<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <mfuentes.labartolaoficial.Model.ZoomImageView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/currentImage"
        android:src="@drawable/no_image_500" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/name"
        android:fontFamily="sans-serif-light"
        android:textColor="#ffbec3bd"
        android:ellipsize="end"
        android:textSize="12dp"
        android:text="Image description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_above="@+id/line"
        android:layout_marginBottom="10dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#d4cdcbcf"
        android:layout_above="@+id/share"
        android:id="@+id/line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/share"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/share_white_small"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="6dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/save"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/share"
        android:layout_toEndOf="@+id/share"
        android:src="@drawable/download_small"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="6dp" />

</RelativeLayout>